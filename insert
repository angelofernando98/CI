<!DOCTYPE html>
<html>
<head>
	<title>Input</title>
</head>
<body>
<?php

if (!empty($_POST)) 
{
	$name = $_POST["name"];
	$sur = $_POST["sur"];

	$info = array('username' => $name, 'password' => $sur);

	$this->db->insert('users', $info);
}


?>

<form action="#" method="post">
  First name:<br>
  <input type="text" name="name">
  <br>
  Last name:<br>
  <input type="text" name="sur">
  <br><br>
  <input type="submit" value="Submit">
</form> 


</body>
